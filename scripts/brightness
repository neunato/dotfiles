#!/bin/dash

# brightness up    - turn up brightness by 10%
# brightness down  - turn down brightness by 10%

if [ "$1" = "up" ]; then
   brightness=$(backlight_control +10%)
fi

if [ "$1" = "down" ]; then
   brightness=$(backlight_control -10%)
fi

notify-send "Brightness" -h int:value:"$brightness" -h string:x-dunst-stack-tag:progress
